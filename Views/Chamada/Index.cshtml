@model IEnumerable<Volare.Models.ChamadaViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<canvas id="line-chart" width="800" height="450"></canvas>

<div class="text-center">
    <h3>Chamadas</h3>
    <br><br><br>

    <div class="card bg-dark container">
        <div class="row pb-3">
            <input type="hidden" class="form-control" id="AulaId" name="AulaId" value="@ViewBag.AulaId">
            <div class="col-5">
                <label class="text-light">Aluno</label>
                <input class="form-control" id="AlunoNome" name="AlunoNome">
            </div>
            <div class="col-5">
                <label class="text-light">Status</label>
                <select class="form-control" name="Status" id="Status">
                    <option value="">Selecione um status</option>
                    <option value="PRESENTE">PRESENTE</option>
                    <option value="AUSENTE">AUSENTE</option>
                </select>
            </div>
            <div class="col-1  mt-auto">
                <input  value="Filtrar" type="button" class="btn btn-outline-light align-middle" onclick="filter()" />
            </div>
        </div>
    </div>
    <br>

    <table id="table" class="table table-striped table-bordered">
        
    </table>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    function filter() {
        let linkAPI = '/Chamada/Table';
        $.ajax({
            url: linkAPI,
            data: {
                AlunoNome: $("#AlunoNome").val(),
                Status: $("#Status").val(),
                AulaId: $("#AulaId").val()
            },
            success: function (dados) {
                $("#table").html(dados);
            }
        });
    }
    filter()

    function test() {
        let linkAPI = '/Dashboard/Aluno';
        $.ajax({
            url: linkAPI,
            data: {
                Id: 1
            },
            success: function (dados) {
                console.log(dados);
                console.log(dados.map(x => x.materiaNome));
                new Chart(document.getElementById("line-chart"), {
                    type: 'bar',
                    data: {
                        labels: dados.map(x => x.materiaNome),
                        datasets: [
                            { 
                                data: dados.map(x => x.presencas),
                                label: "PresenÃ§as",
                                backgroundColor: "#3e95cd"
                            },
                            { 
                                data: dados.map(x => x.totalAulas),
                                label: "Total de Aulas",
                                backgroundColor: "#c45850"
                            },
                        ]
                    },
                    options: {
                        plugins: {
                            title: {
                                display: true,
                                text: 'Chart.js Bar Chart - Stacked'
                            },
                            },
                            responsive: true,
                            scales: {
                            x: {
                                stacked: true,
                            },
                            y: {
                                stacked: true
                            }
                        }
                    }
                });

            }
        });
    }
    test();
</script>